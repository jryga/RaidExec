@model RaidExec.Controllers.GroupEditForm

@{
    ViewBag.Title = "GroupInvite";
}

<h2>Group Invite</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Leader.Name</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <input type="hidden" name="Leader" value="@Model.Leader" />
        <div class="form-group">
            <div class="col-md-4 well img-rounded">
                <h4>Available Characters</h4>
                @foreach (var item in Model.CharList)
                {
                    //if (item.Id != Model.Leader.Id)
                    {
                        <input type="checkbox" name="Characters" value="@item.Value " />
                        <span>@item.Text</span><br />
                    }
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
