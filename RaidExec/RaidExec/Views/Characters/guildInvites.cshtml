@model IEnumerable<RaidExec.Controllers.guildInvitationAdd>

@{
    ViewBag.Title = "Invites";
}

<h2>Invites</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Guild.Name )
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Guild.Name)
        </td>
        <td>
            @Html.ActionLink("Accept", "guildAccept", new { cId = item.CharacterId, iId = item.Id }) |
            @Html.ActionLink("Decline", "guildDecline", new { cId = item.CharacterId, iId = item.Id })
        </td>
    </tr>
}

</table>
