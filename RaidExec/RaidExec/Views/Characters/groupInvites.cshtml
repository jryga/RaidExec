@model IEnumerable<RaidExec.Controllers.groupInvitationAdd>

@{
    ViewBag.Title = "groupInvites";
}

<h2>Group Invites</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Group Leader")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Leader.Name )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupId)
        </td>
        <td>
            @Html.ActionLink("Accept", "groupAccept", new { cId = item.CharacterId, iId = item.Id }) |
            @Html.ActionLink("Decline", "groupDecline", new { cId = item.CharacterId, iId = item.Id })
        </td>
    </tr>
}

</table>
