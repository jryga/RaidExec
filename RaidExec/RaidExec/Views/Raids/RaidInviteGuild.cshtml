@model RaidExec.Controllers.RaidInviteForm

@{
    ViewBag.Title = "RaidInviteGuild";
}

<h2>Raid Invite For Guilds</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>RaidInviteForm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ScheduledTime, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DisplayName(Model.EventName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EventName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.ScheduledTime)
        </div>
        <div class="form-group">
            <div class="col-md-4 well img-rounded">
                <h4>Available Characters</h4>
                @foreach (var item in Model.CharList)
                {
                    {
                        <input type="checkbox" name="Characters" value="@item.Value " />
                        <span>@item.Text</span><br />
                    }
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
